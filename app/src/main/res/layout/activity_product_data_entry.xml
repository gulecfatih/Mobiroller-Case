<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDataEntryActivity">

  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Category:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        >
    </TextView>
    <Spinner
        android:id="@+id/spinnerCategoryName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>
    <TextView

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry Product Name:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        >
    </TextView>

    <EditText
        android:inputType="text"
        android:id="@+id/editProductName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Entry Product Name"
        >
    </EditText>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry product Description:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        >
    </TextView>
    <EditText
        android:inputType="text"
        android:id="@+id/editProductDescription"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Entry product Description"
        >
    </EditText>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry Price:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        >
    </TextView>

    <EditText
        android:inputType="text"
        android:id="@+id/editPrice"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Entry Price"
        >
    </EditText>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry Image:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        >
    </TextView>

    <EditText
        android:inputType="text"
        android:id="@+id/editImage"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Entry Image"
        >
    </EditText>


    <Button
        android:id="@+id/productDataButton"
        android:layout_marginTop="40dp"
        android:text="create Product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

  </LinearLayout>

  </LinearLayout>